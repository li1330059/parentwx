/* 页面整体容器 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  justify-content: flex-start;
}

/* 用户信息 */
.user-info {
  display: flex;
  width: 100%;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  margin: 0 20rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05);
}
.user-avatar{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-details {
  border-left: 1px solid #ccc;
  margin-left: 30rpx;
  padding-left: 30rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.phone, .details, .city {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 7rpx;
}

